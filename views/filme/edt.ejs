<%-include('../cabecalho.ejs')%>
  <h1>Editar Filme</h1>
  <div>
    <a href="/filme/lst">Listar</a>
  </div>
  <div>
    <form method="post">


      <label>Título:</label>
      <input type="text" name="titulo" value="<%=filme.titulo%>"><br>
      <label>Diretor:</label>
      <input type="text" name="diretor" value="<%=filme.diretor%>"><br>
      <label>Ano:</label>
      <input type="text" name="ano" value="<%=filme.ano%>"><br>
      <label>Gênero:</label>
       <select name="genero" id="">
            <option value=""></option>
            <option value="Comédia">Comédia</option>
            <option value="Romance">Romance</option>
            <option value="Ação">Ação</option>
            <option value="Drama">Drama</option>
            <option value="Bigode Maneiro">Bigode maneiro</option>
            <option value="Kdrama">Kdrama</option>
            <option value="Terror">Terror</option>
            <option value="Infantil">Infantil</option>
        </select>
      <label>Duração:</label>
      <input type="text" name="duracao" value="<%=filme.duracao%>"><br>
      <label>Classificação:</label>
        <select name="classificacao" id="">
            <option value=""></option>
            <option value="Livre">Livre</option>
            <option value="10+">10+</option>
            <option value="12+">12+</option>
            <option value="14+">14+</option>
            <option value="16+">16+</option>
            <option value="18+">18+</option>
            <option value="P">PROIBIDO</option>
            <option value="99+">99+</option>
        </select>

      <button type="submit">Salvar Alterações</button>

    </form>
  </div>

  <%-include('../rodape.ejs')%>